<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg1"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@drawable/rating_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ivRating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text = "Popularity: 309.122601"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/ivRating"
        android:id="@+id/pop" />

    <TextView
        android:text="Gru and his wife Lucy must stop former '80s child star Balthazar Bratt from achieving world domination."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/pop"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:id="@+id/syn" />

</RelativeLayout>